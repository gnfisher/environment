# Theme - managed by `theme` command (modus_operandi for light, modus_vivendi for dark)
#theme = modus_operandi
theme = builtin light

# Font
font-family = Menlo
# font-family = Consolas
font-size = 16
adjust-cell-width = -1%

# macOS options
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true
title = ghostty

# Shell behavior
quit-after-last-window-closed = true

# Window settings
window-padding-x = 8
window-padding-y = 8
window-padding-balance = true
window-padding-color = background
background-opacity = 1.0
unfocused-split-opacity = 0.97

# Cursor
cursor-style-blink = false

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Split panes (match WezTerm)
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down

# Navigate panes (match WezTerm)
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+l=goto_split:right
keybind = cmd+shift+k=goto_split:top
keybind = cmd+shift+j=goto_split:bottom

# Close pane
keybind = cmd+w=close_surface

# Shift+Enter for multi-line input in TUIs
keybind = shift+enter=text:\n
